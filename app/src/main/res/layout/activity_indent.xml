            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/app_bar_separete_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/layout_background_light_gray"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:background="#FF9D26"
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>

        <ImageView
            android:src="@drawable/ic_indent_publish"
            android:layout_width="@dimen/indent_icon_width_normal"
            android:layout_height="match_parent" />
        <View
            android:background="#FF9D26"
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
        <ImageView
            android:src="@drawable/ic_indent_taken"
            android:layout_width="@dimen/indent_icon_width_normal"
            android:layout_height="match_parent" />
        <View
            android:background="#FF9D26"
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
        <ImageView
            android:src="@drawable/ic_indent_deliver"
            android:layout_width="38dp"
            android:layout_height="match_parent" />
        <View
            android:background="#FF9D26"
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
        <ImageView
            android:src="@drawable/ic_indent_done_green"
            android:layout_width="@dimen/indent_icon_width_normal"
            android:layout_height="match_parent" />
        <View
            android:background="#FF9D26"
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
        <!--<ImageView-->
            <!--android:src="@drawable/icon_indent_evaluate"-->
            <!--android:layout_width="@dimen/indent_icon_width_focused"-->
            <!--android:layout_height="match_parent" />-->
        <!--<View-->
            <!--android:background="#FF9D26"-->
            <!--android:layout_width="@dimen/indent_line_width"-->
            <!--android:layout_height="1dp"/>-->
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="24dp">
        <View
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>

        <TextView
            android:gravity="center_horizontal"
            android:textColor="@color/indent_icon_text_normal"
            android:text="下单"
            android:layout_width="@dimen/indent_icon_width_normal"
            android:layout_height="match_parent" />
        <View
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="center_horizontal"
            android:textColor="@color/indent_icon_text_normal"
            android:text="接单"
            android:layout_width="@dimen/indent_icon_width_normal"
            android:layout_height="match_parent" />
        <View
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
        <TextView
            android:textColor="@color/indent_icon_text_normal"
            android:gravity="center_horizontal"
            android:text="路上"
            android:layout_width="38dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
        <TextView
            android:gravity="center_horizontal"
            android:textColor="@color/indent_icon_text_normal"
            android:text="完成"
            android:layout_width="@dimen/indent_icon_width_normal"
            android:layout_height="match_parent" />
        <View
            android:layout_width="@dimen/indent_line_width"
            android:layout_height="1dp"/>
