                        android:layout_height="@dimen/indent_list_item" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:gravity="center_vertical"
                            android:text="156****7591"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
