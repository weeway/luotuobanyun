    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/indent_list_padding"
            android:paddingRight="@dimen/indent_list_padding">
            <LinearLayout
                android:background="@drawable/indent_list_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingLeft="5dp"
                    android:textColor="@color/indent_icon_text_normal"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:text="@string/indent_list_title"
                    android:drawableBottom="@drawable/indent_bottom_line"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/indent_list_header_height" />
                <LinearLayout
                    android:padding="@dimen/indent_list_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                        android:gravity="center_vertical"
                        android:text="费用："
                        android:textSize="@dimen/indent_list_item_size"
                        android:layout_width="40dp"
                        android:layout_height="@dimen/indent_list_item" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:gravity="center_vertical"
                            android:text="￥156.68"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                        android:gravity="center_vertical"
                        android:text="车型："
                        android:textSize="@dimen/indent_list_item_size"
                        android:layout_width="40dp"
                        android:layout_height="@dimen/indent_list_item" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:gravity="center_vertical"
                            android:text="中型"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
