                        android:layout_height="@dimen/indent_list_item">
                        <ImageView
                            android:paddingLeft="-3dp"
                            android:src="@drawable/icon_order_number"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:text="   订单编号:"
                            android:gravity="center_vertical"
                            android:layout_width="68dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:text="56321475962342"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/indent_list_item">
                        <ImageView
                            android:paddingLeft="-3dp"
                            android:src="@drawable/icon_time"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:text="   出发时间:"
                            android:gravity="center_vertical"
                            android:layout_width="68dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:text="2016/7/8   下午15:20"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/indent_list_item">
                        <ImageView
                            android:paddingLeft="-3dp"
                            android:src="@drawable/icon_indent_location"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:textColor="@color/indent_icon_text_focused"
                            android:textSize="@dimen/indent_list_item_size"
                            android:text="   (起点)"
                            android:gravity="center_vertical"
                            android:layout_width="50dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:text="福州大学生活一区"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/indent_list_item">
                        <ImageView
                            android:paddingLeft="-3dp"
                            android:src="@drawable/icon_indent_location"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />
                        <TextView

                            android:textSize="@dimen/indent_list_item_size"
                            android:text="   (终点)"
                            android:textColor="#eb4f38"
                            android:gravity="center_vertical"
                            android:layout_width="50dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:text="福州大学生活三区"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                        android:gravity="center_vertical"
                        android:text="创建时间:"
                        android:textSize="@dimen/indent_list_item_size"
                        android:layout_width="60dp"
                        android:layout_height="@dimen/indent_list_item" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:gravity="center_vertical"
                            android:text="2016/7/6  上午8:10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                        android:gravity="center_vertical"
                        android:text="付款时间:"
                        android:textSize="@dimen/indent_list_item_size"
                        android:layout_width="60dp"
                        android:layout_height="@dimen/indent_list_item" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:gravity="center_vertical"
                            android:text="2016/7/8  上午7:00"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                        android:gravity="center_vertical"
                        android:text="支付宝交易号:"
                        android:textSize="@dimen/indent_list_item_size"
                        android:layout_width="84dp"
                        android:layout_height="@dimen/indent_list_item" />
                        <TextView
                            android:textSize="@dimen/indent_list_item_size"
                            android:gravity="center_vertical"
                            android:text="2016070609303507112526"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <View
                        android:background="#bbbbbb"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>
                    <Button
                        android:onClick="onEvaluate"
                        android:id="@+id/btn_indent_evaluate"
                        android:background="@drawable/btn_indent_evaluate"
                        android:text="评价订单"
                        android:textColor="@drawable/btn_indent_text"
                        android:layout_gravity="end"
                        android:layout_width="100dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:background="@drawable/indent_list_background"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.amap.api.maps.MapView
                        android:id="@+id/map_indent_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
