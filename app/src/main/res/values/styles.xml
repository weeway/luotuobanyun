<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimary">@color/toolbar_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/btn_auth_accept_text_color_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_notifications</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="CustomEvaluateTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/evaluate_checkbox_style</item>
    </style>

    <style name="CustomEvaluateBigTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/evaluate_checkbox_big_style</item>
    </style>

    <style name="CustomRadioButtonTheme" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/checkbox_style</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="CustomEvaluateLabel" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/evaluate_label_style</item>
    </style>

    <style name="CustomNavigationBar" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/nav_bar_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/nav_bar_color</item>
    </style>

</resources>
